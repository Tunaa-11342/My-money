generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(cuid())
  email     String        @unique
  name      String?
  createdAt DateTime      @default(now())
  imageUrl  String?

  userSettings     UserSettings?
  memberships      Membership[]
  plannedSpendings PlannedSpending[]
  savingGoals      SavingGoal[]
  debtPlans        DebtPlan[]    
}

model UserSettings {
  id String? @default(uuid())

  userId String @unique

  currency      String  @default("VND")
  monthlyBudget Float   @default(0)
  firstLogin    Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id               String            @id @default(cuid())
  createdAt        DateTime          @default(now())
  name             String
  userId           String?
  icon             String
  type             String            @default("income")
  plannedSpendings PlannedSpending[]

  @@unique([name, userId, type])
}

model Transaction {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updateAt     DateTime @default(now())
  amount       Float
  description  String
  date         DateTime
  userId       String
  type         String   @default("income")
  category     String
  categoryIcon String
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([day, month, year, userId])
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([month, year, userId])
}

model Group {
  id          String       @id @default(cuid())
  name        String
  isPrivate   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  budget      Int          @default(0)
  ownerId     String
  periodDays  Int          @default(30)
  inviteCode  String       @unique @default("")
  expenses    Expense[]
  memberships Membership[]
}

model Membership {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  role      String   @default("member")
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

model Expense {
  id           String          @id @default(cuid())
  name         String
  amount       Int
  note         String?
  createdBy    String
  groupId      String
  createdAt    DateTime        @default(now())
  categoryName ExpenseCategory

  group Group @relation(fields: [groupId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum ExpenseCategory {
  food
  transport
  shopping
  entertainment
  other
}

enum PlannedPeriodType {
  WEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

model PlannedSpending {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId   String?
  category     Category?         @relation(fields: [categoryId], references: [id])
  title        String
  periodType   PlannedPeriodType
  periodKey    String
  targetAmount Decimal           @db.Decimal(14, 2)
  isPinned     Boolean           @default(false)
  notes        String?
  color        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@index([userId, periodType, periodKey])
  @@index([userId, categoryId, periodType, periodKey])
}

enum DebtCategory {
  COLLECT 
  BORROW  
  LEND    
  REPAY   
}

model SavingGoal {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title         String
  targetAmount  Decimal  @db.Decimal(14, 2)
  currentAmount Decimal  @db.Decimal(14, 2) @default(0)

  startDate     DateTime @default(now())
  targetDate    DateTime?

  isPinned      Boolean  @default(false)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([userId, isPinned])
}

model DebtPlan {
  id        String       @id @default(cuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  title     String
  category  DebtCategory
  amount    Decimal      @db.Decimal(14, 2)
  isPinned  Boolean      @default(false)

  notes     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([userId])
  @@index([userId, category])
  @@index([userId, isPinned])
}
